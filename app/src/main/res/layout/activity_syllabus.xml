<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qb.xrealsys.ifafu.SyllabusActivity">

    <include layout="@layout/gadget_titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#efeef3"
            android:id="@+id/syllabusContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/gadget_table_blank" />

        </RelativeLayout>

        <include layout="@layout/gadget_loading" />
    </RelativeLayout>

</LinearLayout>
